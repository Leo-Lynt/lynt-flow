PORT=3001
NODE_ENV=development

# Logging
# Níveis disponíveis: error, warn, info, debug
# Produção: warn (apenas avisos e erros)
# Desenvolvimento: info (info, avisos e erros)
# Debug: debug (todos os logs)
LOG_LEVEL=info

# GitHub Packages Authentication Token
# Create at: https://github.com/settings/tokens
# Required scopes: write:packages, read:packages, repo
GITHUB_TOKEN=your_github_token_here

# Database - Para usar local descomente a linha abaixo e comente a do Atlas
# MONGODB_URI=mongodb://localhost:27017/flow-forge
MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000000

# CORS - Origens permitidas (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5176,http://localhost:8080,http://localhost:5174,http://localhost:5175

# Trust Proxy - Para produção, especifique IPs confiáveis ou número de proxies
# Opções: false (desabilitado), número (ex: 1), ou lista de IPs separados por vírgula
TRUST_PROXY=false


GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/oauth/google/callback
FRONTEND_URL=http://localhost:5174

# Google API Key (para Google Sheets públicos)
# IMPORTANTE: Substitua pela sua chave real do Google Cloud Console
# Acesse: https://console.cloud.google.com/apis/credentials
# Crie uma "API Key" e cole aqui
GOOGLE_API_KEY=your-google-api-key

# Encryption (gere uma chave de 32 bytes)
ENCRYPTION_KEY=your-encryption-key-32-bytes

# SMTP Configuration (para envio de emails via Output)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Stripe Configuration (Billing & Subscriptions)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create products and prices in Stripe Dashboard)
# STARTER Plan
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly_id

# PRO Plan
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly_id
