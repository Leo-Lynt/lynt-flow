#!/usr/bin/env node

/**
 * Module dependencies.
 */

require('dotenv').config();
var app = require('../app');
var debug = require('debug')('flow-forge-api:server');
var http = require('http');
var os = require('os');
var { Server } = require('socket.io');
var fs = require('fs-extra');
var path = require('path');
var readline = require('readline');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Setup Socket.io for real-time log streaming
 */
var io = new Server(server, {
  cors: {
    origin: process.env.ALLOWED_ORIGINS ? process.env.ALLOWED_ORIGINS.split(',') : ['http://localhost:3000', 'http://localhost:5176', 'http://localhost:8080'],
    credentials: true
  }
});

io.on('connection', (socket) => {
  console.log('üì° Client connected to log stream:', socket.id);

  socket.on('error', (error) => {
    console.error('üî¥ Socket error:', error);
    console.error('Socket ID:', socket.id);
  });

  socket.on('tail-logs', async (options = {}) => {
    try {
      console.log('üì° Client requested tail-logs:', options);
      const logsDir = path.join(__dirname, '../logs');
      const today = new Date().toISOString().split('T')[0];
      const filename = options.filename || `LyntFlow-api-${today}.log`;
      const filePath = path.join(logsDir, filename);

      if (!await fs.pathExists(filePath)) {
        console.log('‚ö†Ô∏è  Log file not found:', filePath);
        socket.emit('error', { message: 'Log file not found' });
        return;
      }

      console.log('üëÅÔ∏è  Setting up file watcher for:', filePath);

      // Watch for file changes
      const watcher = fs.watch(filePath, async (eventType) => {
        try {
          console.log('üìÅ File event:', eventType, 'for', filePath);
          if (eventType === 'change') {
            const fileStream = fs.createReadStream(filePath, {
              encoding: 'utf8',
              start: socket.lastPosition || 0
            });

            const rl = readline.createInterface({ input: fileStream });

            for await (const line of rl) {
              if (line.trim()) {
                try {
                  const log = JSON.parse(line);
                  socket.emit('log-entry', log);
                } catch (err) {
                  // Skip invalid JSON
                  console.log('‚ö†Ô∏è  Invalid JSON in log line, skipping');
                }
              }
            }

            socket.lastPosition = (await fs.stat(filePath)).size;
          }
        } catch (watchError) {
          console.error('üî¥ Error in file watcher callback:', watchError);
          console.error('Stack:', watchError.stack);
        }
      });

      socket.on('disconnect', () => {
        try {
          console.log('üîå Client disconnecting, closing watcher');
          watcher.close();
          console.log('‚úÖ Client disconnected from log stream');
        } catch (closeError) {
          console.error('üî¥ Error closing watcher:', closeError);
        }
      });
    } catch (tailLogsError) {
      console.error('üî¥ Error in tail-logs handler:', tailLogsError);
      console.error('Stack:', tailLogsError.stack);
      socket.emit('error', { message: 'Internal error' });
    }
  });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);

  if (typeof addr !== 'string') {
    console.log('\nüöÄ Servidor rodando!');
    console.log('üìç Local:    http://localhost:' + addr.port);

    // Obter IPs da rede
    var networkInterfaces = os.networkInterfaces();
    var networkIPs = [];

    Object.keys(networkInterfaces).forEach(function(interfaceName) {
      networkInterfaces[interfaceName].forEach(function(interface) {
        if (interface.family === 'IPv4' && !interface.internal) {
          networkIPs.push(interface.address);
        }
      });
    });

    if (networkIPs.length > 0) {
      networkIPs.forEach(function(ip) {
        console.log('üåê Network:  http://' + ip + ':' + addr.port);
      });
    }

    console.log('\nPressione Ctrl+C para parar o servidor\n');
  }
}

/**
 * Initialize scheduler service after server starts
 */
async function initializeScheduler() {
  try {
    console.log('üîÑ Starting scheduler initialization...');
    const schedulerService = require('../src/services/schedulerService');
    await schedulerService.initialize();
    console.log('‚úÖ Scheduler service initialized');
  } catch (error) {
    console.error('‚ùå Error initializing scheduler service:', error);
    console.error('Error details:', {
      message: error.message,
      stack: error.stack,
      name: error.name
    });
  }
}

/**
 * Initialize cron jobs after server starts
 */
async function initializeCronJobs() {
  try {
    console.log('üïê Starting cron jobs initialization...');
    const cronService = require('../src/services/cronService');
    cronService.initializeCronJobs();
    console.log('‚úÖ Cron jobs initialized');
  } catch (error) {
    console.error('‚ùå Error initializing cron jobs:', error);
    console.error('Error details:', {
      message: error.message,
      stack: error.stack,
      name: error.name
    });
  }
}

// Call scheduler and cron initialization after server starts listening
server.on('listening', initializeScheduler);
server.on('listening', initializeCronJobs);
